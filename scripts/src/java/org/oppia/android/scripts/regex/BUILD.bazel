"""
Libraries corresponding to regex pattern based validation checks which ensures that no prohibited
file path/name and content are used in the codebase.
"""

load("@io_bazel_rules_kotlin//kotlin:jvm.bzl", "kt_jvm_library")
load("//scripts:script_assets.bzl", "generate_regex_assets_list_from_text_protos")

_REGEX_PATTERN_CHECK_ASSETS = generate_regex_assets_list_from_text_protos(
    name = "regex_asset_files",
    file_content_validation_file_names = ["file_content_validation_checks"],
    filepath_pattern_validation_file_names = ["filename_pattern_validation_checks"],
)

kt_jvm_library(
    name = "regex_pattern_validation_check_lib",
    srcs = ["RegexPatternValidationCheck.kt"],
    resource_strip_prefix = "scripts/src/java",
    resources = _REGEX_PATTERN_CHECK_ASSETS,
    visibility = ["//scripts:oppia_script_binary_visibility"],
    deps = [
        "//scripts/src/java/org/oppia/android/scripts/common:binary_proto_resource_loader",
        "//scripts/src/java/org/oppia/android/scripts/common:repository_file",
        "//scripts/src/java/org/oppia/android/scripts/proto:file_content_validation_checks_java_proto",
        "//scripts/src/java/org/oppia/android/scripts/proto:filename_pattern_validation_checks_java_proto",
        "//scripts/third_party:com_google_protobuf_protobuf-java",
    ],
)
